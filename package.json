{
  "name": "biosentiers-server",
  "version": "0.6.4",
  "private": true,
  "scripts": {
    "apidoc": "npm run apidoc:clean && npm run apidoc:build && concurrently \"npm run apidoc:watch\" \"npm run apidoc:serve\"",
    "apidoc:build": "apidoc -i server/api -o doc/api",
    "apidoc:clean": "rimraf doc/api",
    "apidoc:serve": "node lib/serve-apidoc.js",
    "apidoc:watch": "onchange server/api/**/*.js -- npm run apidoc:build",
    "dev": "npm run lint && concurrently \"npm run server\" \"npm run apidoc\" \"npm run lint:watch\"",
    "doctoc": "doctoc --notitle --github README.md",
    "lint": "jshint --reporter=node_modules/jshint-stylish .",
    "lint:watch": "onchange bin/www knexfile.js config/**/*.js lib/**/*.js migrations/**/*.js server/**/*.js -e doc/**/*.js -- npm run lint",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:test": "cross-env NODE_ENV=test knex migrate:latest",
    "migrate:test:rollback": "cross-env NODE_ENV=test knex migrate:rollback",
    "server": "nodemon",
    "start": "node ./bin/www",
    "test": "cross-env NODE_ENV=test nyc mocha server/**/*.spec.js",
    "test:coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "base64-regex": "^2.0.0",
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "bookshelf": "^0.10.4",
    "chai-string": "^1.4.0",
    "composable-middleware": "^0.3.0",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-jwt": "^5.0.0",
    "geojson-length": "^0.1.1",
    "glob": "^7.1.2",
    "handlebars": "^4.0.10",
    "inflection": "^1.10.0",
    "jsonwebtoken": "^7.1.9",
    "knex": "^0.13.0",
    "knex-postgis": "^0.2.2",
    "lodash": "^4.15.0",
    "log4js": "^2.3.1",
    "moment": "^2.17.1",
    "nodemailer": "^4.0.1",
    "nodemailer-smtp-transport": "^2.7.2",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^7.0.2",
    "pug": "^2.0.0-beta6",
    "qs": "^6.3.0",
    "randomstring": "^1.1.5",
    "uuid": "^3.0.0",
    "valdsl": "^0.4.5",
    "valib": "^2.0.0",
    "wellknown": "^0.5.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "chai": "^4.1.0",
    "chai-moment": "^0.1.0",
    "chance": "^1.0.10",
    "concurrently": "^3.3.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "doctoc": "^1.2.0",
    "http-status": "^1.0.1",
    "jshint": "^2.10.2",
    "jshint-stylish": "^2.2.1",
    "live-server": "^1.2.0",
    "mocha": "^3.1.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.1.0",
    "onchange": "^3.2.1",
    "rimraf": "^2.5.4",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.0"
  },
  "engines": {
    "node": ">= 6.0.0"
  }
}
